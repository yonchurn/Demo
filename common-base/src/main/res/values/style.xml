<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--无标题无背景的弹窗-->
    <style name="Theme_dialog_noTitle_noBackground" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>


    <!--loading 背景-->
    <style name="Theme_dialog_loading" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--dialog动画-->
    <style name="action_sheet_animate" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/action_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/action_sheet_exit</item>
    </style>

    <!--pop to push动画-->
    <style name="pop_push_animate" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/right_to_left</item>
        <item name="android:windowExitAnimation">@anim/left_to_right</item>
    </style>

    <!--垂直展开收缩动画-->
    <style name="vertical_expansion_animate" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/zero_to_full_vertical</item>
        <item name="android:windowExitAnimation">@anim/full_to_zero_vertical</item>
    </style>

    <!--listView-->
    <style name="list_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:listSelector">@color/white</item>
        <item name="android:cacheColorHint">@color/white</item>
        <item name="android:divider">@color/divider_color</item>
        <item name="android:dividerHeight">@dimen/divider_height</item>
        <item name="android:fadingEdgeLength">0sp</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <!--  分割线  -->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <!--  启动图界面样式  -->
    <style name="launchActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_bg</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/black</item>
    </style>
</resources>